<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post["name"] %></td>
        <td><%= post["title"] %></td>
        <td><%= post["content"] %></td>
        <td><%= link_to 'Show', post_path(post["id"]) %></td>
        <td><%= link_to 'Edit', edit_post_path(post["id"]) %></td>
        <td><%= link_to 'Destroy', post_path(post["id"]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
